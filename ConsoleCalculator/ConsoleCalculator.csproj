<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Целевая платформа -->
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Автоматическая генерация AssemblyInfo -->
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>

    <!-- Атрибуты сборки -->
    <AssemblyTitle>ConsoleCalculator</AssemblyTitle>
    <AssemblyProduct>ConsoleCalculator</AssemblyProduct>
    <AssemblyCompany>Ivan Dev</AssemblyCompany>
    <AssemblyVersion>0.1.1</AssemblyVersion>
    <FileVersion>0.1.1</FileVersion>
    <AssemblyConfiguration>Release</AssemblyConfiguration>
  </PropertyGroup>

</Project>